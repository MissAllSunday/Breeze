{
    "name": "suki/breeze",
    "type": "smf-module",
    "description": "SMF modification for posting status and comments on user's walls.",
    "keywords": ["SMF","modifications", "Social"],
    "homepage": "https://github.com/MissAllSunday/Breeze",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Michel Mendiola",
            "email": "suki@missallsunday.com",
            "homepage": "https://missallsunday.com",
            "role": "Developer"
        }
    ],
    "config": {
        "vendor-dir": "breezeVendor",
        "allow-plugins": {
            "php-http/discovery": false
        }
    },
    "require": {
        "php": ">=8.2.0",
        "league/container": "^4.2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpspec/prophecy": "^1.15",
        "friendsofphp/php-cs-fixer": "^3.19",
        "phpstan/phpstan": "^1.8.9",
        "squizlabs/php_codesniffer": "^3.7.1",
        "phpstan/phpstan-phpunit": "^1.1.1",
        "phpspec/prophecy-phpunit": "^2.0.1"
    },
    "autoload": {
        "psr-4": {
            "Breeze\\": "Sources/Breeze/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Breeze\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix ./Sources --verbose --show-progress=dots",
            "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix ./tests --verbose --show-progress=dots",
            "phpcbf -q --standard=./phpcs.xml --tab-width=4 ./Sources ./tests"
        ],
        "lint:check": [
          "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix ./Sources --dry-run --verbose --show-progress=dots",
          "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix ./tests --dry-run --verbose --show-progress=dots"
        ],
        "coverage": "XDEBUG_MODE=coverage phpunit -c phpunit.xml.dist --coverage-html=tests/log/coverage/",
        "phpunit": "phpunit -c phpunit.xml.dist",
        "phpstan": "phpstan analyze --memory-limit=1G -c phpstan.neon",
        "phpcs": "phpcs --standard=./phpcs.xml --ignore=./tests/bootstrap.php --tab-width=4 ./Sources ./tests",
        "serve": "bin/server",
        "test": [
            "@lint:check",
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ]
    }
}
